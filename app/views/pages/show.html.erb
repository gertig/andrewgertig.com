<% title @page.title %>
<%# keywords %>
<% description @page.description %>

<%# Good stuff %>

<%# Facebook Opengraph %>
<%
 opengraph do |graph|
   graph.title "#{@page.title}"
   graph.type 'article'
   graph.url "#{request.url}"
   graph.description @page.description
   # graph.image "#{@page.header_image_url}"
  #  graph.image "#{@page.image}"
 end
%>

<%# Twitter Card %>
<%
  twitter_card('summary') do |card|
    card.url "#{request.url}"
    card.title "#{@page.title}"
    card.description @page.description
    # card.image "#{@page.image}" do |image|
    #   image.src "#{@page.image}"
    # end
    card.creator "@gertig"
    card.site "@gertig"
  end
%>

<!-- Post Content -->
