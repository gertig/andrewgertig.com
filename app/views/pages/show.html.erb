    <div class="container">

        <div class="row">
            <div id="post-content" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

              <!-- <h1 class="post-title"><%#= @page.title %></h1> -->
              <!-- <span class="post-date"><%#= @page.published_on %></span> -->

              <%#= render partial: "admin_box", locals: { post: @page } if is_andrew? %>
              <!-- <div class="post-sharing-buttons"><%#= render partial: "sharing_buttons", locals: { post: @page } %></div> -->


              <% if @page.content %>
                <%= markdown(@page.content).to_html.html_safe %>
              <% end %>


            </div>
        </div>
    </div>
</article>

