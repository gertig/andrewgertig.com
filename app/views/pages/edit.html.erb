<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <section class="post-edit-container">
        <div class="post-edit-left-sidebar">

          <h4>Page Details</h4>

          <p><em><%= @page.published_on %></em></p>
          <p><em>ID: <%= @page.id %></em></p>
          <p><em><%= @page.published? ? page_path_helper(@page) : "ID: #{@page.id}" %></em></p>

        </div>

        <h2><%= @page.title %></h2>

        <%= render 'form' %>

        <%= link_to 'Show', [@page.user, @page] %> |
        <%= link_to 'Back', dashboard_path %>
      </section>
    </div>
  </div>
</div>
